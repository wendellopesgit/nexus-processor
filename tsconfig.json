{
  "compilerOptions": {
    "target": "es2024", // Node.js 22 suporta ES2024
    "module": "NodeNext", // Melhor para Node.js moderno
    "moduleResolution": "NodeNext", // Resolução de módulos otimizada
    "outDir": "./dist", // Pasta de saída organizada
    "rootDir": "./src", // Pasta de origem clara
    "esModuleInterop": true, // Importação de CommonJS
    "forceConsistentCasingInFileNames": true, // Segurança no case-sensitive
    "strict": true, // Todas as verificações ativadas
    "skipLibCheck": true, // Performance - pular verificação de libs
    "experimentalDecorators": true, // Caso use decorators
    "emitDecoratorMetadata": true, // Metadata para decorators
    "sourceMap": true, // Gera source maps
    "inlineSources": true, // Inclui fontes nos maps
    "declaration": true, // Gera arquivos .d.ts
    "declarationMap": true, // Mapeamento para declarações
    "inlineSourceMap": false, // Melhor performance sem inline
    "removeComments": false, // Mantém comentários
    "noEmitOnError": true, // Não emite se houver erros
    "noUnusedLocals": true, // Avisa sobre variáveis não usadas
    "noUnusedParameters": true, // Avisa sobre parâmetros não usados
    "noImplicitReturns": true, // Exige return explícito
    "noFallthroughCasesInSwitch": true // Previne fallthrough em switch
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
